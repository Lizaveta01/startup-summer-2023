{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app": ["src/app"],
      "@assets": ["src/assets"],
      "@components": ["src/components"],
      "@pages": ["src/pages"],
      "@utils": ["src/utils"],
    },
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
